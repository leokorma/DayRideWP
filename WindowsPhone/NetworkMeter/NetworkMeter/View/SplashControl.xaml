<UserControl x:Class="DayRide.View.SplashControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Image Source="/DayRide;component/Images/SplashScreenImage.png" />

        <StackPanel Margin="0,110,0,0" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Source={StaticResource LocalizationUtils}, Path=LocalizationResources.ApplicationName}" Style="{StaticResource PhoneTextLargeStyle}" />
            <ProgressBar Margin="0,20,0,0" IsIndeterminate="True" />
        </StackPanel>

    </Grid>
</UserControl>
